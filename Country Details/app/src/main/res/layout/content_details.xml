<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.josethomas.countrydetailsrcview.DetailsActivity"
    tools:showIn="@layout/activity_details"
    android:background="#f2f7c8">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/flag"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Country Name"
        android:textSize="40sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/capText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital: "
        android:layout_below="@+id/countryName"
        android:textSize="20sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Capital"
        android:layout_toRightOf="@+id/capText"
        android:textSize="20sp"
        android:layout_below="@+id/countryName"
        android:typeface="sans" />

    <TextView
        android:id="@+id/currText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/capText"
        android:text="Currency: "
        android:textSize="20sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Currency"
        android:textSize="20sp"
        android:layout_alignTop="@+id/currText"
        android:layout_toRightOf="@+id/currText"
        android:layout_toEndOf="@+id/currText"
        android:typeface="sans" />


    <TextView
        android:id="@+id/popText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currText"
        android:text="Population: "
        android:textSize="20sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currency"
        android:hint="Population "
        android:textSize="20sp"
        android:layout_toRightOf="@+id/popText"
        android:layout_toEndOf="@+id/popText"
        android:typeface="sans" />
        />


    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/population"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
      />


    <TextView
        android:id="@+id/currentTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="currentTimeText"
        android:textSize="20sp"
        android:layout_centerHorizontal="false"
        android:typeface="normal"
        android:layout_below="@+id/flag"/>


    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="currentTime"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/currentTimeText"
        android:textSize="35sp"
        android:typeface="sans" />


    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="currentDate"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:typeface="sans" />

</RelativeLayout>
